<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
    <AvaloniaUseCompiledBindingsByDefault>true</AvaloniaUseCompiledBindingsByDefault>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <ApplicationIcon>Assets\icon.ico</ApplicationIcon>
    <Platforms>AnyCPU;x86</Platforms>
  </PropertyGroup>

  
  <ItemGroup>
    <AvaloniaResource Include="Assets\**" />
  </ItemGroup>

  
  <ItemGroup>
    <None Remove="lib\arm32\miniaudio.so" />
    <None Remove="lib\arm64\miniaudio.dll" />
    <None Remove="lib\arm64\miniaudio.so" />
    <None Remove="lib\wasm\miniaudio.bc" />
    <None Remove="lib\x64\miniaudio.dll" />
    <None Remove="lib\x64\miniaudio.so" />
    <None Remove="lib\x86\miniaudio.dll" />
    <None Remove="lib\x86\miniaudio.so" />
  </ItemGroup>

  
  <ItemGroup>
    <Content Include="Assets\icon.ico" />
  </ItemGroup>

  
  <ItemGroup>
    <EmbeddedResource Include="lib\arm32\miniaudio.so">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="lib\arm64\miniaudio.dll">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="lib\arm64\miniaudio.so">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="lib\wasm\miniaudio.bc">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="lib\x64\miniaudio.dll">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="lib\x86\miniaudio.dll">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="lib\x86\miniaudio.so">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Avalonia" Version="11.0.4" />
    <PackageReference Include="Avalonia.FreeDesktop" Version="11.0.4" />
    <PackageReference Include="Avalonia.Skia" Version="11.0.4" />
    <PackageReference Include="Avalonia.Themes.Fluent" Version="11.0.4" />
    <PackageReference Include="Avalonia.Fonts.Inter" Version="11.0.4" />
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.2.1" />

    <!--Condition below is needed to remove Avalonia.Diagnostics package from build output in Release configuration.-->
    <PackageReference Condition="'$(Configuration)' == 'Debug'" Include="Avalonia.Diagnostics" Version="11.0.4" />
    <PackageReference Include="KristofferStrube.Blazor.DOM" Version="0.1.1" />
    <PackageReference Include="KristofferStrube.Blazor.MediaCaptureStreams" Version="0.1.0" />
    <PackageReference Include="KristofferStrube.Blazor.WebIDL" Version="0.2.0" />
    <PackageReference Include="Meadow.Foundation" Version="1.3.0" />
    <PackageReference Include="Meadow.Linux" Version="1.3.0" />
    <PackageReference Include="Meadow.Windows" Version="1.3.0" />
    <PackageReference Include="Microsoft.AspNetCore.Components" Version="7.0.11" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="7.0.11" />
    <PackageReference Include="Microsoft.JSInterop" Version="7.0.11" />
    <PackageReference Include="Microsoft.JSInterop.WebAssembly" Version="7.0.11" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="lib\x64\miniaudio.so">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
  </ItemGroup>
</Project>
